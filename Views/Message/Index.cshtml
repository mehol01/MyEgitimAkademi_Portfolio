@model List<MyEgitimAkademi_Portfolio.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Gelen Mesajlar</h2>

<div>
    <table class="table table-bordered">
        <tr>
            <th>Gönderen</th>
            <th>Mesaj</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Message</td>
                <td>@Html.ActionLink("Sil", "DeleteMessage", new { id = item.Message }, new { @class = "btn btn-outline-warning", onclick = "return confirm('Silinsin mi?')" })</td>
            </tr>
        }
    </table>
</div>